@page
@model EventHorizon.Pages.UserPages.EditModel
@{
}


<h1>Edit page</h1>

<div class="row">
    <div class="col-md-6">
        @if (User != null) 
        {
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ViewUser.FirstName"></label>
                    <input asp-for="ViewUser.FirstName" class="form-control"/>
                    <span asp-validation-for="ViewUser.FirstName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ViewUser.LastName"></label>
                    <input asp-for="ViewUser.LastName" class="form-control"/>
                    <span asp-validation-for="ViewUser.LastName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ViewUser.Email"></label>
                    <input asp-for="ViewUser.Email" class="form-control"/>
                    <span asp-validation-for="ViewUser.Email"></span>
                </div>
                <input type="submit" value="Update" />
            </form>
        }
    </div>
</div>